# Usar imagem oficial do Maven para build
FROM maven:3.9.4-eclipse-temurin-21 as build

WORKDIR /app

# Copiar pom.xml e baixar dependências (cache)
COPY pom.xml .
RUN mvn dependency:go-offline

# Copiar o código-fonte
COPY src ./src

# Build do projeto (gera o jar)
RUN mvn clean package -DskipTests

# --- Stage final: imagem runtime ---
FROM eclipse-temurin:21-jre

WORKDIR /app

# Copiar o jar gerado do stage de build
COPY --from=build /app/target/*-runner.jar app.jar

# Expõe a porta padrão do Quarkus (8080)
EXPOSE 8080

# Comando para rodar o jar
CMD ["java", "-jar", "app.jar"]
